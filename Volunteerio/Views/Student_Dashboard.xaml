<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Volunteerio.Views.Student_Dashboard"
             xmlns:local="clr-namespace:Volunteerio"
             xmlns:forms="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms">
    <ContentPage.Content>
        <StackLayout>
            <local:HeaderControl Text="Your Dashboard" HamburgerButtonClicked="HamburgerButton_Clicked"/>

            <forms:ChartView x:Name="Chart" HeightRequest="255" Margin="0"/>

            <Button x:Name="MarketplaceButton" Clicked="MarketplaceButton_Clicked" Text="Marketplace" CornerRadius="30" Margin="20, 0" BackgroundColor="{StaticResource MenuButtonBg}"  BorderColor="{StaticResource MenuBtnBorderC}"/>
            <Button x:Name="AddHoursButton" Clicked="AddHoursButton_Clicked" CornerRadius="30" Text="Add Hours" Margin="20, 10" BackgroundColor="{StaticResource MenuButtonBg}" BorderColor="{StaticResource MenuBtnBorderC}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>