<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Volunteerio.Views.ResetPassword"
             xmlns:local="clr-namespace:Volunteerio">
    <ContentPage.Content>
        <StackLayout>
            <local:HeaderControl Text="Reset Password"/>

            <Entry x:Name="Uname" Placeholder="Username" Margin="20, 0, 20, 0"/>
            <Button x:Name="Request" Text="Request Link" Margin="20, 0, 20, 0" CornerRadius="30" Clicked="Request_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>