<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Volunteerio.Views.School_Settings"
             xmlns:local="clr-namespace:Volunteerio">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" Grid.Row="0"/>
                <RowDefinition Height="auto" Grid.Row="1"/>
                <RowDefinition Height="auto" Grid.Row="2"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" Grid.Column="0"/>
                <ColumnDefinition Width="*" Grid.Column="1"/>
            </Grid.ColumnDefinitions>
            <local:HeaderControl Text="School Settings" Grid.Row="0" Grid.ColumnSpan="2"/>
            <Label Text="Hours Goal" HorizontalOptions="Center" FontSize="20" Grid.Row="1" Grid.ColumnSpan="2"/>
            <Entry IsReadOnly="True" x:Name="HoursGoal" Completed="HoursGoal_Completed" Text="Loading ..." Grid.Row="2" Grid.Column="0" Margin="20, 5" />
            <Button Text="Edit" Grid.Row="2" Grid.Column="1" Margin="10, 5" x:Name="EditButton" Clicked="EditButton_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>